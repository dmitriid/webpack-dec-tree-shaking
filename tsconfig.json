{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": false,
    "experimentalDecorators": true,
    "noLib": false,
    "jsx": "react",
    "outDir": "compiled/",
    "pretty": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  },
  "lib": [
    "DOM",
    "ES6",
    "DOM.Iterable",
    "ScriptHost",
    "ES2017",
    "ES2017.object",
    "ES2015",
    "ES2015.Core",
    "ES2015.Promise"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/__tests__/*",
    "**/*_mock.ts"
  ]
}
